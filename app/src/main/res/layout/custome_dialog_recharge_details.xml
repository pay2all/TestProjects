<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_receipt"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/imageview_close"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/logo"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/textview_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Success"
                android:layout_weight="1"
                android:textColor="#050000"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/imageview_provider_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="5dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="70dp"
            android:background="#B3ADAD" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_op_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="Op.Bal"
                android:textColor="#050000"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="#050000"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_cb_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Cl. Bal"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#050000"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginTop="110dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textview_debit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="12368.27"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#6A6666"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textview_rechargemount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="225.00"
                android:textColor="#6A6666"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textview_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="12112.72"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="#6A6666"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="135dp"
            android:background="#B3ADAD" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:orientation="horizontal"
            android:weightSum="2">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Customer No."
                android:textColor="#050000"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Comission"
                android:textColor="#050000"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:weightSum="2">



            <TextView
                android:id="@+id/textview_customernumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:text="12368.27"
                android:textColor="#6A6666"
                android:layout_weight="1"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textview_comission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:text="9.45"
                android:textColor="#6A6666"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textStyle="bold" />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Transction Id"
                android:textAlignment="center"
                android:textColor="#050000"
                android:textSize="20dp"
                android:layout_weight="1"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Date &amp; Time"
                android:textAlignment="center"
                android:textColor="#050000"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="260dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_transctionid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PBSN36917621"
                android:layout_marginLeft="18dp"
                android:textColor="#6A6666"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_dateandtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2020-05-06
                10:55:18"
                android:paddingLeft="20dp"
                android:textColor="#6A6666"
                android:textStyle="bold" />



        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="305dp"
            android:background="#B3ADAD" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone"
            >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textColor="#040000"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textview_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ravi"
                android:textColor="#706B6B"
                android:textSize="18dp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textStyle="bold" />


        </LinearLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:orientation="vertical"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button_complaint"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:hint="Dispute"
                    android:textColorHint="#ffffff" />


                <Button
                    android:id="@+id/button_share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:hint="Share"
                    android:textColorHint="#ffffff" />


            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
