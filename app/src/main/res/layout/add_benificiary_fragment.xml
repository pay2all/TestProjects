<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

    <!--to show enter benificiary detail -->

                <!--<in.co.getrecharge.Money_Transfers.SearchableSpinner-->
                <!--android:id="@+id/sppiner_banknames"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:spinnerMode="dialog"-->
                <!--&gt;-->
                <!--</in.co.getrecharge.Money_Transfers.SearchableSpinner>-->
                <LinearLayout
                    android:id="@+id/ll_bank_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/rl_bank">

                    <RelativeLayout
                        android:id="@+id/rl_bank"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/icon_shape">


                        <TextView
                            android:id="@+id/textview_bank_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Bank"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/arrow_down"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="1.2">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:paddingTop="2dp"
                            android:paddingLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:paddingRight="5dp"
                            android:background="@drawable/icon_shape"
                            android:layout_gravity="center">

                            <EditText
                                android:id="@+id/edittext_bankaccountnumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Bank Account number"
                                android:inputType="number"
                                android:maxLines="1"
                                android:background="@color/white" />

                        </com.google.android.material.textfield.TextInputLayout>
                        <Button
                            android:id="@+id/button_verify_account"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_shape"
                            android:text="Verify"
                            android:textColor="#ffffff"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_shape"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:paddingRight="5dp">
                        <EditText
                            android:id="@+id/edittext_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Account holder name"
                            android:maxLines="1"
                            android:inputType="text"
                            android:background="@color/white"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_shape"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:paddingRight="5dp">
                        <EditText
                            android:id="@+id/edittext_beneficiary_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Beneficiary Mobile number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:background="@color/white"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_shape"
                        android:paddingTop="5dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <EditText
                            android:id="@+id/edittext_ifscode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="IFS Code "
                            android:maxLines="1"
                            android:inputType="text"
                            android:maxLength="11"
                            android:background="@color/white" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/red"
                        android:visibility="gone"
                        />


                    <Button
                        android:id="@+id/button_add_benificiary"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/button_shape"
                        android:text="Add beneficiary"
                        android:textColor="@color/white"
                        android:layout_below="@+id/ll_bank_detail"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        />
                </LinearLayout>


</LinearLayout>


</RelativeLayout>
