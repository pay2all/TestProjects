                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/button_shape"
                                android:text="Verified"
                                android:textColor="@color/white"
                                />
                        </RelativeLayout>

