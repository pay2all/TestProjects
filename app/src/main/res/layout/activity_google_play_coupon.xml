<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RechargesServicesDetail.DTHRecharge"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_button"
        android:layout_alignParentTop="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/colorPrimary"
                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_recharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="5dp"
                    android:minHeight="200dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/icon_shape"
                            >
                            <ImageView
                                android:id="@+id/iv_ope_icon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                />

                            <TextView
                                android:id="@+id/tv_operator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/iv_ope_icon"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                />
                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/ll_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/tv_number1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Number"
                                android:layout_marginTop="20dp"
                                />

                            <EditText
                                android:id="@+id/ed_number"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Mobile Number"
                                android:inputType="number"
                                android:maxLines="1"
                                android:background="@drawable/icon_shape"
                                android:paddingLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:maxLength="10"
                                />

                            <TextView
                                android:id="@+id/tv_number_error"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:textColor="@color/error_color"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_dthinfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:weightSum="2"
                            android:background="@drawable/icon_shape"
                            android:orientation="horizontal"
                            >


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Customer Name"
                                    android:layout_gravity="left"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textview_customer_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="VIKASH KUMAR"
                                    android:textColor="#040000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mobile Number"
                                    android:layout_gravity="left"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textview_mobile_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="9871901721"
                                    android:textColor="#040000"
                                    android:layout_gravity="left"
                                    android:layout_marginBottom="10dp"
                                    android:textStyle="bold" />




                            </LinearLayout>




                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="1dp"
                                android:layout_weight="1">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Balance"
                                    android:layout_gravity="center"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textview_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-3.46"
                                    android:textColor="#050000"
                                    android:layout_gravity="center"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Monthly"
                                    android:layout_marginTop="5dp"
                                    android:textColor="#66050000"
                                    android:layout_gravity="center"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textview_monthly"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="169.92"
                                    android:textColor="#050000"
                                    android:layout_gravity="center"
                                    android:textStyle="bold" />




                            </LinearLayout>



                        </LinearLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Provider"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            />
                        <RelativeLayout
                            android:id="@+id/rl_operator"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/icon_shape"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            >
                            <TextView
                                android:id="@+id/tv_provider"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="Select Operator"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/arrow_down"
                                />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_operator_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textColor="@color/error_color"
                            />








                        <LinearLayout
                            android:id="@+id/ll_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount"
                                />

                            <EditText
                                android:id="@+id/ed_amount"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Amount"
                                android:inputType="number"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/icon_shape"
                                android:paddingLeft="5dp"
                                />

                            <TextView
                                android:id="@+id/tv_amount_word"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                />


                            <TextView
                                android:id="@+id/tv_amount_error"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:textColor="@color/error_color"
                                />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/red"
                            android:visibility="gone"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/bt_Verify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Verify"
            android:textColor="@color/white"
            android:background="@drawable/button_shape"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/bt_proceed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Pay Now"
            android:textColor="@color/white"
            android:background="@drawable/button_shape"
            />

    </LinearLayout>

</RelativeLayout>