<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#ffffff"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_shape"
                    >

                    <RelativeLayout
                        android:id="@+id/rl_contain_transaction_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:id="@+id/imageview_kasmartrecharge_logo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/logo"
                            android:layout_centerHorizontal="true"
                            />

                        <TextView
                            android:id="@+id/textview_app_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:layout_below="@+id/imageview_kasmartrecharge_logo"
                            android:text="@string/app_name"
                            android:visibility="invisible"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@+id/textview_app_name"
                            android:layout_marginTop="5dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/rectangle_shape"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:layout_weight="1"
                                    android:text="Remitter Name "
                                    android:background="@drawable/rectangle_shape_thin"
                                    />

                                <TextView
                                    android:id="@+id/textview_shop_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/rectangle_shape_thin"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:background="@drawable/rectangle_shape_thin"
                                    android:text="Remitter Mob no "
                                    />
                                <TextView
                                    android:id="@+id/textview_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/rectangle_shape_thin"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:background="@drawable/rectangle_shape_thin"
                                    android:text="Beneficiary Name"
                                    />
                                <TextView
                                    android:id="@+id/textview_beneficiary_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:background="@drawable/rectangle_shape_thin"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:background="@drawable/rectangle_shape_thin"
                                    android:text="Bank Name"
                                    />
                                <TextView
                                    android:id="@+id/textview_bank_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:background="@drawable/rectangle_shape_thin"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:background="@drawable/rectangle_shape_thin"
                                    android:text="Account No"
                                    />
                                <TextView
                                    android:id="@+id/textview_accountno"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:background="@drawable/rectangle_shape_thin"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:background="@drawable/rectangle_shape_thin"
                                    android:text="IFSC"
                                    />
                                <TextView
                                    android:id="@+id/textView_ifsc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:background="@drawable/rectangle_shape_thin"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:background="@drawable/rectangle_shape_thin"
                                    android:text="Trans Type"
                                    />
                                <TextView
                                    android:id="@+id/textview_mode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:background="@drawable/rectangle_shape_thin"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:background="@drawable/rectangle_shape_thin"
                                    android:text="Date"
                                    />
                                <TextView
                                    android:id="@+id/textview_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="5dp"
                                    android:background="@drawable/rectangle_shape_thin"
                                    />

                            </LinearLayout>


                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/ll_contain_transaction_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_contain_transaction_status"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:background="@drawable/rectangle_shape_thin"
                            >

                            <TextView
                                android:id="@+id/textview_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Amount"
                                android:textAlignment="center"
                                android:padding="5dp"
                                android:background="@drawable/rectangle_shape_thin"
                                />

                            <TextView
                                android:id="@+id/textview_bank_reference"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="UTR"
                                android:textAlignment="center"
                                android:padding="5dp"
                                android:background="@drawable/rectangle_shape_thin"
                                />

                            <TextView
                                android:id="@+id/textview_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Status"
                                android:textAlignment="center"
                                android:padding="5dp"
                                android:background="@drawable/rectangle_shape_thin"
                                />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview_receipt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_contain_transaction_detail"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_weight="0.4"
                            android:textAlignment="center"
                            android:text="Total Amount"
                            android:padding="5dp"
                            android:background="@drawable/rectangle_shape_thin"
                            />

                        <TextView
                            android:id="@+id/textview_total_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_alignParentRight="true"
                            android:textAlignment="center"
                            android:layout_weight="0.6"
                            android:padding="5dp"
                            android:background="@drawable/rectangle_shape_thin"
                            />

                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageview_status"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/cardview_receipt"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                >
                <Button
                    android:id="@+id/button_receipt_exit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button_shape"
                    android:hint="Back To Beneficiary List"
                    android:layout_weight="1"
                    android:textColorHint="@color/white"
                    android:layout_margin="3dp"
                    />

                <TextView
                    android:id="@+id/tv_print_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Print Transaction"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/bt_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:text="Back to Home"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>