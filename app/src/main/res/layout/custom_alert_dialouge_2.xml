<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="#090000"
        android:textSize="25dp"
        android:paddingLeft="20dp"
        android:text="Select Your Choice">

    </TextView>

    <RadioGroup
        android:id="@+id/radiogroup_group"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/radiobutton_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:text="All">

        </RadioButton>


        <RadioButton
            android:id="@+id/radiobutton_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:text="Success">

        </RadioButton>


        <RadioButton
            android:id="@+id/radiobutton_pedning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:text="Pending">

        </RadioButton>

        <RadioButton
            android:id="@+id/radiobutton_failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:text="Failed">

        </RadioButton>


        <RadioButton
            android:id="@+id/radiobutton_disputed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:text="Disputed">

        </RadioButton>

        <RadioButton
            android:id="@+id/radiobutton_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:text="Credit">

        </RadioButton>

        <RadioButton
            android:id="@+id/radiobutton_debit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:text="Debit">

        </RadioButton>


    </RadioGroup>

</LinearLayout>
