<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#5623aa" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Main shape -->
    <item android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">

        <shape android:shape="rectangle">
            <solid android:color="#5623aa" />
            <corners android:radius="10dp" />
        </shape>

    </item>
</layer-list>